{
  "name": "hono-backend-template",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "biome lint && bun build src/index.ts --outdir=dist --target=node",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "seed:permissions": "bun run scripts/seed-permissions.ts",
    "seed:permissions:cleanup": "bun run scripts/seed-permissions.ts --cleanup",
    "show:role-permissions": "bun run scripts/show-role-permissions.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.700.0",
    "@aws-sdk/s3-request-presigner": "^3.700.0",
    "@hono/zod-openapi": "^1.1.0",
    "@prisma/client": "^6.15.0",
    "@react-email/components": "^0.5.7",
    "@scalar/hono-api-reference": "^0.9.16",
    "@types/nodemailer": "^7.0.3",
    "bcryptjs": "^3.0.2",
    "better-auth": "^1.3.8",
    "date-fns": "^4.1.0",
    "hono": "^4.9.6",
    "nodemailer": "^7.0.10",
    "prisma": "^6.15.0",
    "react": "^19.2.0",
    "resend": "^6.3.0",
    "stoker": "^2.0.1",
    "zod": "^4.1.5",
    "zod-openapi": "^5.4.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@types/bcryptjs": "^3.0.0",
    "@types/bun": "latest",
    "prisma-zod-generator": "^1.18.5"
  }
}
